<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:id="@+id/rl_pop_dissmiss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_124"
        />
    <RelativeLayout
        android:layout_below="@+id/rl_pop_dissmiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white_topround20"
        >
        <RelativeLayout
            android:id="@+id/rl_income_poptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30">
            <TextView
                android:id="@+id/tv_pop_income_color"
                android:layout_width="4dip"
                android:layout_height="10dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:scaleType="fitXY"
                android:background="@drawable/bg_round2" />
            <TextView
                android:id="@+id/tv_pop_income_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他提成"
                android:textColor="#FF717985"
                android:textSize="@dimen/sp_15"
                android:layout_toRightOf="@+id/tv_pop_income_color"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_income_popmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00"
            android:textColor="#FF384359"
            android:textSize="@dimen/sp_30"
            android:layout_below="@+id/rl_income_poptop"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_12"
            android:textStyle="bold"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pop_income"
            android:layout_marginTop="@dimen/dp_42"
            android:layout_above="@+id/tv_pop_income_know"
            android:layout_below="@+id/tv_income_popmoney"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_pop_income_know"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_nextbtn_blue"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            />
    </RelativeLayout>
</RelativeLayout>