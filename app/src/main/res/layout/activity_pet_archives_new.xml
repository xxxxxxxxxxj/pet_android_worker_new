<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_common_icon"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/titlebaraphl" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp">
        <com.haotang.petworker.view.NiceImageView
            android:id="@+id/iv_archives_head"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:is_circle="false"
            app:corner_radius="@dimen/dp_25"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/iv_archives_head"
            android:layout_marginLeft="11dp"
            android:layout_centerInParent="true"
            >
            <RelativeLayout
                android:id="@+id/rl_archives_top"
                android:layout_width="match_parent"
                android:layout_height="24dp">
                <TextView
                    android:id="@+id/tv_archives_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFFFF"
                    android:textSize="17sp"
                    />
                <ImageView
                    android:id="@+id/iv_archives_sex"
                    android:layout_toRightOf="@+id/tv_archives_nickname"
                    android:layout_width="18.5dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="3dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_archives_age"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/iv_archives_sex"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/bg_fanstag_red"
                    android:textColor="#FFFF3A1E"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_archives_top">
                <TextView
                    android:id="@+id/tv_archives_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#FFFFFFFF"
                    android:textSize="14sp"
                    />

            </RelativeLayout>
        </RelativeLayout>
        
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/rv_archives_list"
        android:background="@drawable/bg_white_topround20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>