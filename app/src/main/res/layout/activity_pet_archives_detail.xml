<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_common_icon"
    tools:context=".PetArchivesDetailActivity">
    <include layout="@layout/titlebaraphl"
        android:id="@+id/title"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_archives_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_85"
                android:background="#FFFFFF"
                >
                <TextView
                    android:id="@+id/archives_beautyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_41"
                    android:textColor="#FF002241"
                    android:textSize="@dimen/sp_20"
                    />
                <TextView
                    android:id="@+id/tv_archives_beautyinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/archives_beautyname"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textColor="#FF717985"
                    android:textSize="@dimen/sp_14"
                    />
                <com.haotang.petworker.view.NiceImageView
                    android:id="@+id/iv_archives_pethead"
                    android:layout_below="@+id/tv_archives_beautyinfo"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"
                    app:corner_radius="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_25"
                    />
                <TextView
                    android:id="@+id/tv_archives_petname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_archives_pethead"
                    android:layout_below="@+id/tv_archives_beautyinfo"
                    android:layout_marginTop="@dimen/dp_34"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:textColor="#FF002241"
                    android:textSize="@dimen/sp_16"
                    />
                <TextView
                    android:id="@+id/tv_upload_time"
                    android:layout_below="@+id/tv_archives_petname"
                    android:layout_toRightOf="@+id/iv_archives_pethead"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="护理记录"
                    android:id="@+id/tv_archives_tipone"
                    android:textColor="#FF002241"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_below="@+id/iv_archives_pethead"
                    android:layout_marginLeft="@dimen/dp_15"
                    />
                <TextView
                    android:id="@+id/tv_archives_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_archives_tipone"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    />
                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_12"
                    android:background="#FFF6F8FA"
                    android:layout_below="@+id/tv_archives_content"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/rl_archives_top"
                android:id="@+id/rl_archives_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_14"
                        >
                        <TextView
                            android:id="@+id/tv_archives_tiptwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="护理前"
                            android:textColor="#FF002241"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/dp_15"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_archives_before"
                            android:layout_below="@+id/tv_archives_tiptwo"
                            android:layout_width="@dimen/dp_113"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_14"
                        >
                        <TextView
                            android:id="@+id/tv_archives_tipthree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="护理后"
                            android:textStyle="bold"
                            android:textColor="#FF002241"
                            android:textSize="@dimen/sp_18"
                            android:layout_marginLeft="@dimen/dp_15"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_archives_after"
                            android:layout_below="@+id/tv_archives_tipthree"
                            android:layout_width="@dimen/dp_113"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
            <com.haotang.petworker.view.NiceImageView
                android:id="@+id/iv_archives_beautyhead"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_31"
                android:layout_centerHorizontal="true"
                app:is_circle="false"
                app:corner_radius="@dimen/dp_25"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_below="@+id/rl_archives_bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/dp_15"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_archives_tipfour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#FF717985"
                            android:textSize="@dimen/sp_14"
                            android:text="宝贝情况:"
                            />
                        <TextView
                            android:id="@+id/tv_archives_baby"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_archives_tipfour"
                            android:layout_centerVertical="true"
                            android:textColor="#FF717985"
                            android:textSize="@dimen/sp_14"
                            android:layout_marginLeft="@dimen/dp_10"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8">
                        <TextView
                            android:id="@+id/tv_archives_tipfive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#FF717985"
                            android:textSize="@dimen/sp_14"
                            android:text="服务项目:"
                            />
                        <TextView
                            android:id="@+id/tv_archives_service"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_archives_tipfive"
                            android:layout_centerVertical="true"
                            android:textColor="#FF717985"
                            android:textSize="@dimen/sp_14"
                            android:layout_marginLeft="@dimen/dp_10"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8">
                        <TextView
                            android:id="@+id/tv_archives_tipsix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#FF717985"
                            android:textSize="@dimen/sp_14"
                            android:text="服务方式:"
                            />
                        <TextView
                            android:id="@+id/tv_archives_servicetype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_archives_tipsix"
                            android:layout_centerVertical="true"
                            android:textColor="#FF717985"
                            android:textSize="@dimen/sp_14"
                            android:layout_marginLeft="@dimen/dp_10"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>