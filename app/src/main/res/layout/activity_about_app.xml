<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include layout="@layout/titlebarwhite"
        android:id="@+id/title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/title"
        >
        <ImageView
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="91dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宠物家"
            android:textColor="#FF002241"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/tv_about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="美容师端V3.3.40"
            android:textColor="#FF717985"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_about_name"
        android:layout_centerHorizontal="true"
        android:text="400-030-0011"
        android:textColor="#FF717985"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        />
   <TextView
       android:id="@+id/tv_about_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="北京昊唐科技有限公司"
       android:textColor="#FF717985"
       android:textSize="12sp"
       android:layout_marginBottom="59dp"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       />

</RelativeLayout>