<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/titlebarwhite" />
        <TextView
            android:id="@+id/tv_production_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="泰迪装精品造型对比"
            android:textColor="#FF384359"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_production_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传时间：2019-09-03"

                android:textColor="#FF717985"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_production_audit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待审核"
                android:layout_alignParentRight="true"
                android:textColor="#ffff3a1e"
                android:textSize="12sp"
                android:layout_marginRight="@dimen/dp_15"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_production_icon"
            android:layout_width="345dp"
            android:layout_height="345dp"
            android:layout_marginTop="24.5dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/btn_del_production"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_nextbtn_blue"
            android:text="删除作品"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>
</RelativeLayout>