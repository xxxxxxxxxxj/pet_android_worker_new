<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5">

        <TextView
            android:id="@+id/tv_item_upgradeorderconfirm_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Â¥0"
            android:textColor="@color/a384359"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/tv_item_upgradeorderconfirm_price"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/red_point" />

            <TextView
                android:id="@+id/tv_item_upgradeorderconfirm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/a384359"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_upgradeorderconfirm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="TextView"
        android:textColor="@color/a717985"
        android:textSize="@dimen/sp_14" />
</LinearLayout>