<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <TextView
            android:id="@+id/tv_integral_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF717985"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/tv_integral_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_integral_type"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#FF9FA7B9"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_integral_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="#FFFF3A1E"
            android:textSize="@dimen/sp_17"
            />
    </RelativeLayout>
</RelativeLayout>