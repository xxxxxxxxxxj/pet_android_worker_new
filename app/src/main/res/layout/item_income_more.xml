<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/dp_30">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/v_circle_bule"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_34"
            android:background="@drawable/bg_circle_ff002241"/>
        <TextView
            android:id="@+id/tv_income_more_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="哈哈哈哈哈"
            android:textSize="@dimen/sp_15"
            android:textColor="#FF717985"
            android:layout_toRightOf="@+id/v_circle_bule"
            android:layout_marginLeft="@dimen/dp_8"
            />
        <ImageView
            android:id="@+id/iv_income_more_tip"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/icon_income_desc"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_income_more_name"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginLeft="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/tv_income_more_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00"
            android:textStyle="bold"
            android:textColor="#FF384359"
            android:textSize="@dimen/sp_18"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/hint_text"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="哈哈哈哈哈"
        android:textSize="@dimen/sp_12"
        android:textColor="#FF717985"
        android:layout_marginLeft="@dimen/dp_48"
        />
</RelativeLayout>