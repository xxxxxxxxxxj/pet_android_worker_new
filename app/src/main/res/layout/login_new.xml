<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="欢迎来到宠物家"
        android:layout_marginTop="8.6dp"
        android:textColor="#FF002241"
        android:textSize="18sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73.4dp">
        <TextView
            android:id="@+id/tv_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入手机号码"
            android:textColor="#FF9FA7B9"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            />
        <RelativeLayout
            android:id="@+id/ll_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/tv_login_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textColor="#FF384359"
                android:textSize="17sp"
                android:layout_marginLeft="14dp"
                />
            <View
                android:id="@+id/v_line"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_15"
                android:background="#FF384359"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_toRightOf="@+id/tv_login_tip"
            />
           <EditText
               android:id="@+id/et_login_phone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="16dp"
               android:layout_toRightOf="@+id/v_line"
               android:layout_toLeftOf="@+id/iv_login_clear"
               android:inputType="phone"
               android:textColor="#FF384359"
               android:focusable="true"
               android:maxLength="11"
               android:lines="1"
               android:focusableInTouchMode="true"
               android:textSize="17sp"
               android:background="@null"/>
            <ImageView
                android:id="@+id/iv_login_clear"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:visibility="gone"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_login_clear"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11.75dp"
        android:layout_marginRight="15dp"
        android:background="#EEEEEE"/>
    <Button
        android:id="@+id/btn_login_next"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28.75dp"
        android:text="下一步"
        android:background="@drawable/bg_nextbtn_gray"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        />
</LinearLayout>