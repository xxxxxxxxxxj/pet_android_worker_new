<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_common_icon"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/titlebaraphl"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_white_topround20"
                android:layout_marginTop="74dp"
                >
                <TextView
                    android:id="@+id/tv_introduce_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FF002241"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="52dp"
                    />
                <ImageView
                    android:id="@+id/iv_introduce_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_introduce_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    />
                <TextView
                    android:id="@+id/tv_special_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专长介绍"
                    android:textColor="#FF384359"
                    android:textSize="@dimen/sp_18"
                    android:layout_below="@+id/iv_introduce_level"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="22.5dp"
                    />
                <TextView
                    android:id="@+id/tv_introduce_special"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_special_tip"
                    android:textColor="#FF717985"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="18.5dp"
                    />
                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="#FFF6F8FA"
                    android:layout_below="@+id/tv_introduce_special"
                    />
                <TextView
                    android:id="@+id/tv_self_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人介绍"
                    android:textColor="#FF384359"
                    android:textSize="@dimen/sp_18"
                    android:layout_below="@+id/line1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="13.5dp"
                    />
                <TextView
                    android:id="@+id/tv_introduce_self"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_self_tip"
                    android:textColor="#FF717985"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="18dp"
                    />
            </RelativeLayout>
            <com.haotang.petworker.view.NiceImageView
                android:id="@+id/iv_introduce_head"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:layout_marginTop="30dp"
                app:is_circle="false"
                android:layout_centerHorizontal="true"
                app:corner_radius="@dimen/dp_25"
                />

        </RelativeLayout>


</LinearLayout>