<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_feedback_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="#FF384359"
        android:textSize="@dimen/sp_16"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_white_round20"
        >
        <TextView
            android:id="@+id/tv_feedback_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF717985"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_feedback_icon"
            android:layout_below="@+id/tv_feedback_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/line1"
            android:layout_below="@+id/rv_feedback_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFF0F5F9"
            />
        <LinearLayout
            android:id="@+id/ll_feedback_reply"
            android:visibility="gone"
            android:layout_below="@+id/line1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/icon_feedback_tag"
                />
            <TextView
                android:id="@+id/tv_feedback_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="#FFFF3A1E"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="@dimen/dp_15"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>