<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_common_icon"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/titlebaraphl"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_topround20"
            android:layout_marginTop="74dp"
            >
            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF002241"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="52dp"
                />
            <TextView
                android:id="@+id/tv_level_nextlevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_level"
                android:textColor="#FF717985"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/tv_special_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据情况"
                android:textColor="#FF384359"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18"
                android:layout_below="@+id/tv_level_nextlevel"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="22.5dp"
                />
            <TextView
                android:id="@+id/tv_level_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_special_tip"
                android:text="总订单数，美容订单数中包括CKU/JKC证书，既往工作经验等有效的订单数"
                android:textColor="#FF717985"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="18.5dp"
                />
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#FFF6F8FA"
                android:layout_below="@+id/tv_level_information"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_202"
                android:orientation="vertical"
                android:layout_below="@+id/line1"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="积分"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="我的数据"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:text="高级美容师要求"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#F0F5F9"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="总订单数*"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_totalorder_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_totalorder_tonum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="美容师订单数*"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_beautician_orders"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_beautician_toorders"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#F0F5F9"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="好评率"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_goodnum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_togoodnum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="30天差评数"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_month_badnum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_month_tobadnum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <com.haotang.petworker.view.NiceImageView
            android:id="@+id/iv_introduce_head"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            app:corner_radius="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
</LinearLayout>