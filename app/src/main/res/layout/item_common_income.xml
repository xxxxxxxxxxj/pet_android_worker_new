<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:background="@drawable/bg_icon_commonincome">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/ll_commonincome_top"
            android:gravity="center_vertical"
            >
            <View
                android:id="@+id/v_income_color"
                android:layout_width="4dp"
                android:layout_height="10dp"
                android:background="@drawable/bg_round1"
                />
            <TextView
                android:id="@+id/tv_incomecommon_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/v_income_color"
                android:text="工作时间"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#ff717985"
                android:textSize="15sp"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_commonincome_top"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="29dp"
            >
            <TextView
                android:id="@+id/tv_commonincome_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#ff384359"
                android:textSize="20sp"
                android:text="20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天"
                android:textColor="#ff717985"
                android:layout_marginLeft="1dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_commonincome_day"
                android:layout_alignBaseline="@+id/tv_commonincome_day"
                android:textSize="14sp"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>