<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_addpetarchives"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:orientation="horizontal"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <ImageView
                    android:id="@+id/iv_addpetarchives_img"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginRight="10dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_icon_unnet_circle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_addpetarchives_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="TextView"
                            android:textColor="@color/a333333"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/iv_addpetarchives_sex"
                            android:layout_width="14dip"
                            android:layout_height="12dip"
                            android:layout_marginRight="5dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/pet_archives_nan" />

                        <TextView
                            android:id="@+id/tv_addpetarchives_month"
                            android:layout_width="wrap_content"
                            android:layout_height="17dip"
                            android:background="@drawable/bg_orange_round"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dip"
                            android:paddingRight="5dip"
                            android:text="TextView"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_addpetarchives_petname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/a666666"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dip"
                    android:background="@color/af8f8f8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dip"
                    android:text="完善宠物信息"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginBottom="15dip"
                    android:background="@color/aEEEEEE" />

                <RelativeLayout
                    android:id="@+id/rl_addpetarchives_xg"
                    android:layout_width="match_parent"
                    android:layout_height="75dip">

                    <ImageView
                        android:id="@+id/iv_addpetarchives_xg_right"
                        android:layout_width="8dip"
                        android:layout_height="13dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_right_blod" />

                    <LinearLayout
                        android:id="@+id/ll_addpetarchives_xg_left"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2.5dip"
                            android:text="宠物性格"
                            android:textColor="@color/a333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_addpetarchives_xg_jlr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2.5dip"
                            android:text="记录人："
                            android:textColor="@color/a666666"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_addpetarchives_xg_str"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_toLeftOf="@id/iv_addpetarchives_xg_right"
                        android:layout_toRightOf="@id/ll_addpetarchives_xg_left"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:hint="未填写"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:textColor="@color/a666666"
                        android:textColorHint="@color/abbbbbb"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="10dip"
                    android:background="@color/aEEEEEE" />

                <RelativeLayout
                    android:id="@+id/rl_addarchives_nlfw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dip"
                    android:paddingTop="15dip"
                    android:paddingRight="5dip"
                    android:paddingBottom="15dip">

                    <LinearLayout
                        android:id="@+id/ll_addarchives_nlfw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_addarchives_nlfw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="未填写"
                            android:textColor="@color/a666666"
                            android:textColorHint="@color/abbbbbb"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_right_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:layout_toLeftOf="@id/ll_addarchives_nlfw"
                        android:gravity="center_vertical|left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:text="宠物年龄范围"
                            android:textColor="@color/a333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_addarchives_nljlr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="记录人："
                            android:textColor="@color/a666666"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="10dip"
                    android:background="@color/aEEEEEE" />

                <RelativeLayout
                    android:id="@+id/rl_addarchives_tt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dip"
                    android:paddingTop="15dip"
                    android:paddingRight="5dip"
                    android:paddingBottom="15dip">

                    <LinearLayout
                        android:id="@+id/ll_addarchives_tt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_addarchives_tt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="未填写"
                            android:textColor="@color/a666666"
                            android:textColorHint="@color/abbbbbb"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_right_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:layout_toLeftOf="@id/ll_addarchives_tt"
                        android:gravity="center_vertical|left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:text="宠物体态"
                            android:textColor="@color/a333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_addarchives_ttjlr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="记录人："
                            android:textColor="@color/a666666"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <!--添加护理照片-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dip"
                    android:layout_marginBottom="15dip"
                    android:background="@color/af8f8f8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dip"
                        android:text="添加护理照片"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="非必填项，出现异常情况务必拍摄"
                        android:textColor="@color/ad0021b"
                        android:textSize="12sp" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/aEEEEEE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dip"
                    android:text="护理前（4张）"
                    android:textColor="@color/a666666"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_addpetarchives_beforeimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:background="@color/white" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dip"
                    android:layout_marginRight="5dip"
                    android:text="护理后（4张）"
                    android:textColor="@color/a666666"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_addpetarchives_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:layout_marginBottom="15dip"
                        android:background="@color/white" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dip"
                    android:layout_marginBottom="15dip"
                    android:background="@color/af8f8f8" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:orientation="vertical"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*宝贝情况"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="该部分填写内容用户可见"
                    android:textColor="@color/ad0021b"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/aEEEEEE" />

            <RelativeLayout
                android:id="@+id/RelatNoPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:orientation="vertical"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <ImageView
                    android:id="@+id/iv_addpetarchives_nopro"
                    android:layout_width="21dip"
                    android:layout_height="21dip"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_tag_unselect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身体健康，没有问题"
                    android:textColor="@color/a333333"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/aEEEEEE" />

            <LinearLayout
                android:id="@+id/ll_addpetarchives_nopro_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/af8f8f8"
                android:orientation="vertical"
                android:padding="15dip"
                android:visibility="gone">

                <com.haotang.petworker.view.FluidLayout
                    android:id="@+id/fluidNoProTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_addpetarchives_nopro_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:background="@color/af8f8f8"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_addpetarchives_nopro_content"
                    android:layout_width="match_parent"
                    android:layout_height="90dip"
                    android:background="@color/white"
                    android:gravity="top|left"
                    android:hint="宠物身体健康，鼓励宠主继续保持。\n例如：宠宝非常勇于尝试新的服务，表现很乖，要奖励一下的～"
                    android:maxLength="500"
                    android:padding="10dip"
                    android:textColor="@color/a666666"
                    android:textColorHint="@color/abbbbbb"
                    android:textSize="12sp">

                </EditText>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/aEEEEEE" />

            <RelativeLayout
                android:id="@+id/RelatHasPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:orientation="vertical"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <ImageView
                    android:id="@+id/iv_addpetarchives_yespro"
                    android:layout_width="21dip"
                    android:layout_height="21dip"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_tag_unselect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="存在问题"
                    android:textColor="@color/a333333"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/aEEEEEE" />

            <LinearLayout
                android:id="@+id/ll_addpetarchives_yespro_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/af8f8f8"
                android:orientation="vertical"
                android:padding="15dip"
                android:visibility="gone">

                <com.haotang.petworker.view.FluidLayout
                    android:id="@+id/fluidYesProTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_addpetarchives_yespro_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:background="@color/af8f8f8"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_addpetarchives_yespro_content"
                    android:layout_width="match_parent"
                    android:layout_height="90dip"
                    android:background="@color/white"
                    android:gravity="top|left"
                    android:hint="请具体描述并给予适当养护建议。\n例如：宠宝的耳道比较脏，本次已清理干净，如果持续出现大量分泌物/异味/红肿等情况建议您及时带宝贝就医。"
                    android:maxLength="500"
                    android:padding="10dip"
                    android:textColor="@color/a666666"
                    android:textColorHint="@color/abbbbbb"
                    android:textSize="12sp">

                </EditText>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/aEEEEEE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:orientation="vertical"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*护理记录"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="该内容真实填写，用户不可见"
                    android:textColor="@color/ad0021b"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/aEEEEEE" />

            <com.haotang.petworker.view.FluidLayout
                android:id="@+id/fluidHljlTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_addpetarchives_hljl_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:background="@color/white"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_addpetarchives_hljl_content"
                android:layout_width="match_parent"
                android:layout_height="90dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@color/af8f8f8"
                android:gravity="top|left"
                android:hint="具体情况说明并给予其他美容师相应的建议\n例如：宠宝毛发经常打结，尤其腋下和脖子上，服务前请先仔细查看毛发打结情况。"
                android:maxLength="500"
                android:padding="10dip"
                android:textColor="@color/a666666"
                android:textColorHint="@color/abbbbbb"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_addpetarchives_submit"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:layout_margin="15dip"
                android:background="@drawable/bg_orange_round"
                android:gravity="center"
                android:text="提 交"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>