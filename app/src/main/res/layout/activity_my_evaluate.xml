<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include layout="@layout/titlebarwhite" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_evaluate_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/bg_red_round14"
            android:text="全部"
            />
        <TextView
            android:id="@+id/tv_evaluate_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:background="@drawable/bg_white_round14"
            android:textColor="#FF717985"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="好评"
            />
        <TextView
            android:id="@+id/tv_evaluate_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:background="@drawable/bg_white_round14"
            android:textColor="#FF717985"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="中评"
            />
        <TextView
            android:id="@+id/tv_evaluate_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:textColor="#FF717985"
            android:paddingBottom="@dimen/dp_5"
            android:background="@drawable/bg_white_round14"
            android:paddingTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="差评"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_12"
        android:background="#FFF6F8FA"
        android:layout_above="@+id/iv_evaluate_head"
        />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srl_evaluate_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_evaluate_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>