<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_round20"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_defaultdialog_title"
        android:layout_width="match_parent"
        android:layout_height="64dip"
        android:background="@drawable/bg_income_topradius"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/a384359"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_defaultdialog_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="30dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="30dip"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/a717985"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#DFE0E2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_defaultdialog_cancel"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/a717985"
            android:textSize="15sp" />

        <View
            android:id="@+id/vw_defaultdialog"
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="#DFE0E2" />

        <TextView
            android:id="@+id/tv_defaultdialog_submit"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/aFF3A1E"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>