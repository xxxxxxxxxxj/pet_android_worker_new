<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="79dp">
        <RelativeLayout
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:id="@+id/rl_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">
            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:src="@drawable/dog_icon_unnet" />
            <ImageView
                android:id="@+id/img_vip_tag"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/icon_vip" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_toRightOf="@+id/rl_icon"
            android:layout_marginTop="13.5dp"
            android:layout_marginLeft="12dp"
            android:textColor="#FF384359"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/textview_appoint_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="13.5dp"
            android:text="TextView"
            android:textColor="#FF384359"
            android:textSize="14.5sp" />
        <TextView
            android:id="@+id/textview_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_appoint_nums"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            />
        <TextView
            android:id="@+id/textview_dogname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.5dp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:lines="1"
            android:textSize="12sp"
            android:ellipsize="end"
            android:layout_below="@+id/textview_username"
            android:layout_toRightOf="@+id/rl_icon"
            android:layout_toLeftOf="@+id/textview_tag"
            android:text="快让他来买商品吧"
            android:textColor="#FF717985"/>
    </RelativeLayout>
</LinearLayout>