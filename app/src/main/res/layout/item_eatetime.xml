<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_98"
    android:layout_height="@dimen/dp_98"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginBottom="@dimen/dp_20"
    android:background="@drawable/bg_round_f6f8fa">

    <LinearLayout
        android:id="@+id/ll_item_eattime_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_f0f5f9_bottomround20"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_item_eattime_str"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_item_eattime_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启"
                android:textColor="@color/a717985"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_eattime_switch"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_item_eattime_switch"
                android:layout_width="@dimen/dp_27"
                android:layout_height="@dimen/dp_15"
                android:scaleType="fitXY"
                android:src="@drawable/switch_close" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_item_eattime_bottom">

        <TextView
            android:id="@+id/tv_item_eattime_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="今日"
            android:textColor="@color/a002241"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_item_eattime_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_eattime_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textColor="@color/a002241"
                android:textSize="@dimen/sp_40"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_eattime_ri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="日"
                android:textColor="@color/a002241"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>