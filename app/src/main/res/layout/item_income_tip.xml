<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/rl_income_top"
            >
            <ImageView
                android:id="@+id/iv_income_tip"
                android:layout_width="4dp"
                android:layout_height="10dp"
                android:background="@drawable/bg_round1"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_income_tiptitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奖励/服务费"
                android:textColor="#FF717985"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:lines="1"
                android:layout_toRightOf="@+id/iv_income_tip"
                />
            <ImageView
                android:id="@+id/iv_income_desc"
                android:layout_toRightOf="@+id/tv_income_tiptitle"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@drawable/icon_income_desc"
                android:layout_centerVertical="true"
                tools:visibility="visible"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/iv_income_more"
                android:layout_width="@dimen/dp_27"
                android:layout_height="@dimen/dp_27"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/icon_income_more"
                tools:visibility="visible"
                android:visibility="gone"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12987.00"
            android:textColor="#FF384359"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_below="@+id/rl_income_top"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginBottom="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/tv_item_income_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_income"
            android:layout_marginLeft="@dimen/dp_34"
            android:textColor="#FF717985"
            tools:text="包含3项：体内驱虫"
            android:textSize="@dimen/sp_14"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_54"
            />
    </RelativeLayout>



</RelativeLayout>