<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.haotang.petworker.view.NiceImageView
        android:id="@+id/iv_ranking_head"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_65"
        android:layout_marginLeft="@dimen/dp_19"
        app:is_circle="false"
        app:corner_radius="@dimen/dp_25"
        />
    <TextView
        android:id="@+id/tv_ranking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_ranking_head"
        android:layout_marginLeft="@dimen/dp_12"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/sp_17"
        android:layout_marginTop="@dimen/dp_12"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_ranking_head"
        android:layout_below="@+id/tv_ranking_name"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_15"
        >
        <TextView
            android:id="@+id/tv_ranking_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排名："
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_11"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_ranking_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_ranking_tip"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_17"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_ranking_num"
            android:layout_toLeftOf="@+id/tv_rankingorder_tip"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >
           <!-- <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_15"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                />-->

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_rankingorder_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算订单金额："
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_11"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_ranking_order"
            />
        <TextView
            android:id="@+id/tv_ranking_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_17"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp_15"
            />
        </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ranking_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_ranking_head"
        android:background="@drawable/bg_white_topround20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/tv_ranking_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        />
</RelativeLayout>