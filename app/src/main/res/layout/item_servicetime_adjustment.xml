<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dip"
    android:orientation="horizontal"
    android:paddingLeft="15dip"
    android:paddingRight="15dip" >

    <TextView
        android:id="@+id/tv_item_servicetime_adjustment_name"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/a333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_item_servicetime_adjustment_ysc"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/a333333"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_item_servicetime_adjustment_jian"
            android:layout_width="16.5dip"
            android:layout_height="16.5dip"
            android:src="@drawable/jian_time_img" />

        <TextView
            android:id="@+id/tv_item_servicetime_adjustment_xgsj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:text="0"
            android:textColor="@color/a333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_item_servicetime_adjustment_jia"
            android:layout_width="16.5dip"
            android:layout_height="16.5dip"
            android:src="@drawable/jia_time_img" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_servicetime_adjustment_sjsc"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/a333333"
        android:textSize="14sp" />

</LinearLayout>