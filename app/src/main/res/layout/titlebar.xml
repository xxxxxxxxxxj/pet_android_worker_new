<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_titlebar"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@color/a3a3636"
    android:paddingLeft="5dip"
    android:paddingRight="5dip" >

    <ImageButton
        android:id="@+id/ib_titlebar_back"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_back" />

    <ImageButton
        android:layout_width="29dip"
        android:layout_height="22dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:visibility="gone"
        android:background="@drawable/icon_main_more"/>

    <ImageButton
        android:id="@+id/ib_titlebar_other"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_back"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_titlebar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@id/ib_titlebar_other"
        android:layout_toRightOf="@id/ib_titlebar_back"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@color/white"
        android:textSize="@dimen/TITLE_SIZE" />

    <TextView
        android:id="@+id/tv_titlebar_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="15sp" />

</RelativeLayout>