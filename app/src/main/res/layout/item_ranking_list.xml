<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_ranking_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/iv_ranking_rank"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="invisible"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tv_ranking_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:textColor="#FF384359"
            android:textSize="@dimen/sp_15"
            />
        <com.haotang.petworker.view.NiceImageView
            android:id="@+id/iv_ranking_head"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            app:corner_radius="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_ranking_rank"
            android:layout_marginLeft="@dimen/dp_12"
            />
        <TextView
            android:id="@+id/tv_ranking_name"
            android:layout_width="@dimen/dp_56"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_ranking_head"
            android:textColor="#FF384359"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            android:lines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_ranking_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF717985"
            android:textSize="@dimen/sp_14"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_ranking_name"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            >
            <TextView
                android:id="@+id/tv_ranking_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¥ "
                android:textColor="#FFFF3A1E"
                android:textSize="@dimen/sp_12"
                android:layout_alignBaseline="@+id/tv_ranking_money"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <TextView
                android:id="@+id/tv_ranking_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFF3A1E"
                android:textSize="@dimen/sp_17"
                android:gravity="left"
                android:layout_toRightOf="@+id/tv_ranking_rmb"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>