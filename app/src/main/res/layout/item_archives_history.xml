<?xml version="1.0" encoding="utf-8"?>
<com.haotang.petworker.view.ShadowLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_neworder_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:hl_cornerRadius="20dp"
    app:hl_dx="0dp"
    app:hl_dy="0dp"
    app:hl_shadowColor="@color/default_shadow_color"
    app:hl_shadowLimit="10dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="44dp">
            <TextView
                android:id="@+id/tv_history_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-04-28"
                android:textColor="#FF002241"
                android:textSize="@dimen/sp_18"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_11"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看"
                android:textColor="#FF717985"
                android:textSize="@dimen/sp_15"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_6"
                android:layout_toLeftOf="@+id/iv_history_right"
                />
            <ImageView
                android:id="@+id/iv_history_right"
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:src="@drawable/icon_jiantou_right"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#F4F4F4"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_25"
            >
            <TextView
                android:id="@+id/tv_history_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="护理记录"
                android:textColor="#FF384359"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/tv_history_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_history_type"
                android:layout_marginRight="7.5dp"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_history_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_history_content"
                android:layout_toRightOf="@+id/tv_history_type"
                android:layout_marginLeft="@dimen/dp_15"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</com.haotang.petworker.view.ShadowLayout>